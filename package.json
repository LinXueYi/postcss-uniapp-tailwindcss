{
  "name": "postcss-uniapp-tailwindcss",
  "version": "1.0.0",
  "description": "PostCSS plugin use tailwindcss in uniapp",
  "keywords": ["postcss", "css", "postcss-plugin", "tailwindcss", "uniapp"],
  "scripts": {
    "test": "jest --coverage && eslint .",
    "build": "npx tailwindcss-cli build ./src/app.css -o ./dist/app.css",
    "postcss": "postcss -o ./dist/app.css ./src/app.css"
  },
  "author": "LinXueYi <695126622@qq.com>",
  "license": "MIT",
  "repository": "LinXueYi/postcss-uniapp-tailwindcss",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "clean-publish": "^2.1.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "simple-git-hooks": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "dependencies": {
    "tailwindcss": "^2.1.2"
  }
}
